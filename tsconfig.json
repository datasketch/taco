{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es6"],
    "module": "ES2020",
    "rootDir": "src",
    "declaration": true,                              /* Generate .d.ts files from TypeScript and JavaScript files in your project. */
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
